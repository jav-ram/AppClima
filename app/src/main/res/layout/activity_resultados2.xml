<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resultados2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.javier.clima.ActivityResultados">

    <TextView
        android:text="Ciudad:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:id="@+id/textCity"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCity"
        app:layout_constraintLeft_toLeftOf="@+id/textCity"
        app:layout_constraintTop_toBottomOf="@+id/textCity"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="Temperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Temperatura"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/textCity"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textCity"
        android:layout_marginStart="32dp" />

    <TextView
        android:text="temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTemperatura"
        app:layout_constraintTop_toBottomOf="@+id/Temperatura"
        app:layout_constraintLeft_toLeftOf="@+id/Temperatura"
        android:layout_marginStart="16dp"
        android:textSize="35sp" />

    <TextView
        android:text="Humedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Humedad"
        app:layout_constraintLeft_toLeftOf="@+id/textCity"
        android:layout_marginTop="192dp"
        app:layout_constraintTop_toBottomOf="@+id/textCity"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="hum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHumedad"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/Humedad"
        app:layout_constraintLeft_toLeftOf="@+id/Humedad"
        android:layout_marginStart="8dp" />

    <TextView
        android:text="PresiÃ³n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Presion"
        tools:layout_editor_absoluteX="128dp"
        app:layout_constraintTop_toTopOf="@+id/Humedad"
        app:layout_constraintLeft_toLeftOf="@+id/txtTemperatura"
        android:layout_marginStart="88dp" />

    <TextView
        android:text="pres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPresion"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/Presion"
        app:layout_constraintLeft_toLeftOf="@+id/Presion"
        android:layout_marginStart="8dp" />

    <TextView
        android:text="Max:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Max"
        android:layout_marginStart="96dp"
        app:layout_constraintLeft_toRightOf="@+id/Temperatura"
        app:layout_constraintTop_toTopOf="@+id/Temperatura"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMax"
        app:layout_constraintLeft_toLeftOf="@+id/Max"
        android:layout_marginStart="48dp"
        app:layout_constraintTop_toTopOf="@+id/Max"
        android:textSize="13sp" />

    <TextView
        android:text="Min:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Min"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/Max"
        app:layout_constraintRight_toRightOf="@+id/Max" />

    <TextView
        android:text="min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMin"
        app:layout_constraintLeft_toLeftOf="@+id/txtMax"
        app:layout_constraintTop_toTopOf="@+id/Min"
        android:textSize="13sp" />

    <ProgressBar
        android:id="@+id/circularProgressbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:progress="0"
        android:max="100"
        android:secondaryProgress="100"
        android:progressDrawable="@drawable/circular"
        app:layout_constraintTop_toBottomOf="@+id/txtHumedad"
        app:layout_constraintLeft_toLeftOf="@+id/Humedad" />


</android.support.constraint.ConstraintLayout>
